<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Loan Department">

<listeners>
<listener class-name="test.Listeners"/>


</listeners>
  <test thread-count="5" name="Personal Loan">
    <classes>
     
      <class name="test.newday1"/>
      <class name="test.newday2"/>
      <class name="test.newday3"/>
    </classes>
  </test>
  
 <test name="Car Loan">
     <classes>
        <class name="test.testday1">
           <methods>
           
             <exclude name="MobileLoginHomeLoan"/>
           </methods>
           </class>
     </classes>
     
     </test>
  
   <test name="Home Loan">      
          <classes>
        <class name="test.testday2">
           <methods>
           
             <include name="MobileLoginHomeLoan2"/>
           </methods>
           </class>
           
         </classes>
         </test>
         
         <test name="Mobile Loan">      
          <classes>
        <class name="test.testday2">
           <methods>
           
             <include name="Mobile.*"/>
           </methods>
           </class>
           <class name="test.newday3"/>
         </classes>
         </test>
         
         <test name="API Loan">      
          <classes>
        <class name="test.testday1">
           <methods>
           
             <exclude name="API.*"/>
           </methods>
           </class>
           
         </classes>
     
  </test> <!-- Test -->
</suite> <!-- Suite -->
